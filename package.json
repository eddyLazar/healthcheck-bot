{
  "name": "telegram-healthcheck-bot",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "jest --forceExit --watchAll --verbose",
    "lint": "eslint \"**/*.{js,ts}\" --quiet --fix",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build": "npm run build-ts && npm run lint",
    "watch-node": "nodemon dist/server.js",
    "start": "node dist/server.js",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,Jest\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run watch-test\""
  },
  "author": "Eddy Lazar",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.16",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "concurrently": "^4.1.1",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/node-telegram-bot-api": "^0.31.0",
    "axios": "^0.19.0",
    "dotenv": "^8.0.0",
    "eslint-config-standard": "^13.0.1",
    "express": "^4.17.1",
    "node-fetch": "^2.6.0",
    "node-telegram-bot-api": "^0.30.0"
  }
}
